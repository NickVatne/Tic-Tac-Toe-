<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:background="@color/colorSecondary"
                                             tools:context=".screens.MenuFragment"
>


    <Button
            android:id="@+id/btnSingle"
            style="@style/AppTheme"
            android:layout_width="230dp"
            android:layout_height="45dp"
            android:layout_marginTop="101dp"
            android:background="@color/colorPrimary"
            android:text="Singleplayer"
            android:textColor="@android:color/background_light"
            app:layout_constraintBottom_toTopOf="@+id/btnMulti"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgTicTacToe"
    />

    <Button
            android:id="@+id/btnMulti"
            style="@style/AppTheme"
            android:layout_width="230dp"
            android:layout_height="46dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorPrimary"
            android:text="Multiplayer"
            android:textColor="@android:color/background_light"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnSingle"/>

    <Button
            android:id="@+id/btnHighScore"
            style="@style/AppTheme"
            android:layout_width="230dp"
            android:layout_height="46dp"
            android:layout_marginTop="72dp"
            android:background="@color/colorPrimary"
            android:text="Highscores"
            android:textColor="@android:color/background_light"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnSingle" app:layout_constraintHorizontal_bias="0.497"/>
    <ImageView
            android:id="@+id/imgTicTacToe"
            android:layout_width="367dp"
            android:layout_height="135dp"
            android:layout_marginEnd="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="56dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/tictactoelogo"
            android:contentDescription="Top header Logo"/>

</android.support.constraint.ConstraintLayout>
